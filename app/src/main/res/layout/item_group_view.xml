<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_group_root"
    android:orientation="vertical"
    android:stateListAnimator="@animator/group_selection"
    android:background="#FFF"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackground"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingStart="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/item_group_project"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold"
                    tools:text="project name"
                    />
                <ImageView
                    android:id="@+id/item_group_renew_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:scaleX=".6"
                    android:scaleY=".6"
                    android:alpha=".9"
                    android:src="@drawable/ic_autorenew_black_24px"/>
            </LinearLayout>
            <TextView
                android:id="@+id/item_group_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:textSize="18sp"
                tools:text="TASK NAME"
                />
            <TextView
                android:id="@+id/item_group_preview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingBottom="10dp"
                android:textStyle="italic"
                android:textSize="12sp"
                tools:text="Subtask 1, SubTask 2, SubTask 3"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/item_group_options"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_group_option_fullscreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_fullscreen_white_24px"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="15dp"
                android:scaleX="1.2"
                android:scaleY="1.2"/>
            <ImageView
                android:id="@+id/item_group_option_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="15dp"
                android:src="@drawable/ic_create_white_24px"/>
            <ImageView
                android:id="@+id/item_group_option_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="15dp"
                android:scaleX="1.1"
                android:scaleY="1.1"
                android:src="@drawable/ic_play_arrow_white_24px" />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/item_group_subtasks_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:visibility="gone"
        android:background="#000"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/item_group_subtasks_rv"
            android:background="#FFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <View android:id="@+id/item_group_divider" style="@style/Divider"/>
    </LinearLayout>
</LinearLayout>