<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_group_selector"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_choose_group"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:transitionName="groupSelectorBar"
        android:contentInsetStart="0dp"
        android:contentInsetLeft="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        android:background="#fff"
        android:elevation="2dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="18dp"
                android:alpha="0.6"
                android:layout_gravity="center_vertical"
                android:transitionName="groupSelectorIcon"
                android:background="@drawable/ic_bubble_chart_black_24px"/>
            <EditText
                android:id="@+id/act_proj_filter"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:transitionName="group_hint"
                android:textSize="16sp"
                android:layout_marginLeft="6dp"
                android:paddingLeft="10dp"
                android:background="@android:color/transparent"
                android:hint="Search project"
                android:layout_weight="1"/>
        </LinearLayout>
        

        
    </android.support.v7.widget.Toolbar>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_group_selector"
        android:background="#FFF"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>



</LinearLayout>