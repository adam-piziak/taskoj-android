<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_dialog_priority_root"
    android:orientation="vertical"
    android:background="@drawable/ripple"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="@dimen/dialog_priority_padding"
    android:paddingRight="@dimen/dialog_priority_padding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/item_dialog_priority_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:text="@string/placeholder_text"/>
    <TextView
        android:id="@+id/item_dialog_priority_description"

        android:lineSpacingExtra="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:text="@string/placeholder_text"/>

</LinearLayout>