<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingStart="20dp"
            android:textSize="16sp"
            android:text="renew options"/>
        <RadioGroup
            android:id="@+id/act_renew_picker_options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp">
            <RadioButton
                android:id="@+id/act_renew_picker_option_none"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="do not repeat"
                android:checked="true"
                android:textStyle="bold"
                android:background="@android:color/transparent"
                android:padding="15dp"
                android:textColor="#424242"
                android:buttonTint="#424242"
                android:paddingStart="10dp"/>
            <RadioButton
                android:id="@+id/act_renew_picker_option_daily"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="daily"
                android:textStyle="bold"
                android:padding="15dp"
                android:textColor="#424242"
                android:buttonTint="#424242"
                android:paddingStart="10dp"/>
            <RadioButton
                android:id="@+id/act_renew_picker_option_weekly"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="#424242"
                android:paddingStart="10dp"
                android:text="weekly (choose days)"
                android:padding="15dp"
                android:textStyle="bold"
                android:textColor="#616161"/>
        </RadioGroup>
        <LinearLayout
            android:id="@+id/act_renew_picker_field_days"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/sunday"
                android:clickable="true"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:text="SUN"/>
            <TextView
                android:id="@+id/monday"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:text="MON"/>
            <TextView
                android:id="@+id/tuesday"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:text="TUES"/>
            <TextView
                android:id="@+id/wednesday"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:text="WED"/>
            <TextView
                android:id="@+id/thursday"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:text="THU"/>
            <TextView
                android:id="@+id/friday"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:text="FRI"/>
            <TextView
                android:id="@+id/saturday"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:text="SAT"/>

        </LinearLayout>
</LinearLayout>
    <Button
        android:id="@+id/act_renew_picker_action_create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#263238"
        style="@style/Widget.AppCompat.Button.Colored"
        android:text="set" />
</RelativeLayout>